<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/incident_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/inc_id"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/patient_call_portal_received"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/patient_call"/>

    <TextView
        android:id="@+id/time_diff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/questionnaire_mark"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/incident_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/patient_call"/>

    <TextView
        android:id="@+id/patient_call"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_timestamp"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/patient_call_portal_received"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incident_id"
        app:layout_constraintBottom_toTopOf="@id/nurse_reply"/>

    <TextView
        android:id="@+id/patient_call_portal_received"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_timestamp"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/patient_call"
        app:layout_constraintEnd_toStartOf="@id/patient_call_nurse_received"
        app:layout_constraintTop_toBottomOf="@id/incident_id"
        app:layout_constraintBottom_toTopOf="@id/nurse_reply"/>

    <TextView
        android:id="@+id/patient_call_nurse_received"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_timestamp"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/patient_call_portal_received"
        app:layout_constraintTop_toBottomOf="@id/incident_id"
        app:layout_constraintBottom_toTopOf="@id/nurse_reply"/>

    <TextView
        android:id="@+id/nurse_reply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_timestamp"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/nurse_reply_portal_received"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_call"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/nurse_reply_portal_received"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_timestamp"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/nurse_reply"
        app:layout_constraintEnd_toStartOf="@id/nurse_reply_patient_received"
        app:layout_constraintTop_toBottomOf="@id/patient_call"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/nurse_reply_patient_received"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_timestamp"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nurse_reply_portal_received"
        app:layout_constraintTop_toBottomOf="@id/patient_call"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>